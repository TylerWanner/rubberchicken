# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                    controllers.Application.index
GET         /review360           controllers.Application.review360
GET         /evaluation          controllers.Application.evaluation
GET         /compare             controllers.Application.compare



GET         /user/:id            controllers.UserAPI.getUser(id)
GET         /user                controllers.UserAPI.query()
POST        /user                controllers.UserAPI.createUser()
PUT         /user/:id            controllers.UserAPI.updateUser()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.versioned(path="/public", file: Asset)
